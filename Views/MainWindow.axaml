<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Navigator.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="Navigator.Views.MainWindow"
        Icon="/Assets/navigator.ico"
        Title="Navigator"
        Width="1200"
        Height="700"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource AppText}"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="24,*">
        <!-- Custom Title Bar with Tabs and Window Controls -->
        <Grid Grid.Row="0" Background="{StaticResource AppBackgroundSecondary}" ColumnDefinitions="*,Auto">
            <!-- Title bar drag area and tabs -->
            <DockPanel Grid.Column="0" LastChildFill="False">
                <!-- Tabs Container -->
                <TabControl DockPanel.Dock="Left"
                            ItemsSource="{Binding Tabs}"
                            SelectedItem="{Binding SelectedTab}"
                            Background="Transparent"
                            Foreground="{StaticResource AppText}"
                            Padding="0"
                            MaxWidth="800">
            <TabControl.Styles>
                <Style Selector="TabControl">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Height" Value="24" />
                </Style>
                <Style Selector="TabItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Foreground" Value="{StaticResource AppText}" />
                    <Setter Property="Padding" Value="12,0" />
                    <Setter Property="Margin" Value="0,0" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0,0,1,0" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Height" Value="24" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
                <Style Selector="TabItem:pointerover">
                    <Setter Property="Background" Value="{StaticResource AppHoverBackground}" />
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Background" Value="{StaticResource AppAccent}" />
                    <Setter Property="Foreground" Value="{StaticResource AppSelectedText}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Margin" Value="0" />
                </Style>
            </TabControl.Styles>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="False" Height="24" VerticalAlignment="Bottom">
                        <Button DockPanel.Dock="Right"
                                Width="24"
                                Height="20"
                                Padding="0"
                                Margin="4,0,0,0"
                                Background="Transparent"
                                Foreground="{StaticResource AppText}"
                                BorderThickness="0"
                                Click="OnCloseTabClicked"
                                Tag="{Binding }"
                                ToolTip.Tip="Close Tab"
                                Classes="TabCloseButton"
                                VerticalAlignment="Bottom">
                            <TextBlock Text="×" FontSize="12" TextAlignment="Center" VerticalAlignment="Center" />
                        </Button>
                        <TextBlock Text="{Binding Title}"
                                   VerticalAlignment="Bottom"
                                   Height="16"
                                   Margin="0,0,4,0" />
                    </DockPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
        </DockPanel>

        <!-- Window Control Buttons -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="0" VerticalAlignment="Top">
            <!-- Minimize Button -->
            <Button Width="36" Height="36"
                    Padding="0" Margin="0"
                    Background="Transparent"
                    Foreground="{StaticResource AppText}"
                    BorderThickness="0"
                    Click="OnMinimizeClicked"
                    ToolTip.Tip="Minimize"
                    Classes="WindowControlButton">
                <TextBlock Text="−" FontSize="16" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Light"/>
            </Button>

            <!-- Maximize Button -->
            <Button Width="36" Height="36"
                    Padding="0" Margin="0"
                    Background="Transparent"
                    Foreground="{StaticResource AppText}"
                    BorderThickness="0"
                    Click="OnMaximizeClicked"
                    ToolTip.Tip="Maximize"
                    Classes="WindowControlButton">
                <TextBlock Text="☐" FontSize="14" TextAlignment="Center" VerticalAlignment="Center"/>
            </Button>

            <!-- Close Button -->
            <Button Width="36" Height="36"
                    Padding="0" Margin="0"
                    Background="Transparent"
                    Foreground="{StaticResource AppText}"
                    BorderThickness="0"
                    Click="OnCloseClicked"
                    ToolTip.Tip="Close"
                    Classes="WindowControlButton CloseButton">
                <TextBlock Text="✕" FontSize="14" TextAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="{StaticResource AppBackground}">
            <ContentControl Content="{Binding SelectedTab.ContentControl}" />
        </Grid>
    </Grid>

</Window>
