<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Navigator.UI.Views.AboutDialog"
        Title="About Navigator"
        CanResize="False"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource AppText}"
        Padding="8"
        SizeToContent="WidthAndHeight">
  <Grid Margin="12">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Image Name="IconImage" Width="64" Height="64" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" />

    <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="6" HorizontalAlignment="Stretch" VerticalAlignment="Top">
      <TextBlock Name="TitleText" Text="Navigator" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" />
      <TextBlock Name="VersionText" HorizontalAlignment="Left" />
      <TextBlock Name="DescText" Text="A better file explorer for macOS, Windows and Linux." TextWrapping="Wrap" Margin="0,8,0,0" HorizontalAlignment="Left" />

      <TextBlock Name="RuntimeInfoText" FontSize="10" Foreground="Gray" Margin="0,4,0,0" HorizontalAlignment="Left" />
      <TextBlock Text="Copyright Â© 2025 Radaiko. Licensed under the MIT License." FontSize="10" Foreground="Gray" Margin="0,2,0,0" HorizontalAlignment="Left" />

      <Button Content="Powered by open-source software" FontSize="10" Foreground="Blue" Background="Transparent" BorderThickness="0" Margin="0,4,0,0" HorizontalAlignment="Right" Cursor="Hand" Click="OpenNugets_Click" />
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
        <Button Name="OkButton" Content="Close" Width="90" IsDefault="True" HorizontalContentAlignment="Center" />
        <Button Name="WebsiteButton" Content="Website" Width="90" HorizontalContentAlignment="Center"/>
      </StackPanel>

    </StackPanel>
  </Grid>
</Window>
