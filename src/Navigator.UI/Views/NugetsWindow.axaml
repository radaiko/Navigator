<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Navigator.UI"
        xmlns:models="clr-namespace:Navigator.UI.Models"
        x:Class="Navigator.UI.Views.NugetsWindow"
        Title="Credits"
        Width="640" Height="400" CanResize="false"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource AppText}">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ListBox Name="PackagesList" Grid.Row="0">
      <ListBox.ItemTemplate>
        <DataTemplate DataType="models:PackageInfo">
          <Grid ColumnDefinitions="220,120,*" ColumnSpacing="12">
            <TextBlock Text="{Binding Name}" Grid.Column="0" />
            <TextBlock Text="{Binding Version}" Grid.Column="1" />
            <Button Content="{Binding License}" Grid.Column="2" HorizontalAlignment="Stretch" Click="LicenseButton_Click" />
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
