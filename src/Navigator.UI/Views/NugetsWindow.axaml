<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Navigator.UI.Views.NugetsWindow"
        Title="NuGet and Runtime Info"
        Width="640" Height="400" CanResize="True">
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ListBox Name="PackagesList" Grid.Row="0">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBlock Text="{Binding Name}" Width="220" />
            <TextBlock Text="{Binding Version}" Width="120" />
            <TextBlock Text="{Binding AssemblyName}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Spacing="8" Margin="0,8,0,0">
      <Button Name="RefreshButton" Content="Refresh" Width="90" />
      <Button Name="CopyButton" Content="Copy" Width="90" />
      <Button Name="CloseButton" Content="Close" Width="90" />
    </StackPanel>
  </Grid>
</Window>
